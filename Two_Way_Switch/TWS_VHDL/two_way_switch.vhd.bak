library IEEE;
use IEEE.STD_LOGIC_1164.ALL;

entity two_way_switch is
    Port ( A1 : in  STD_LOGIC;      -- XOR gate input 1
           A2 : in  STD_LOGIC;      -- XOR gate input 2
           OP : out  STD_LOGIC;     -- XOR gate output
end two_way_switch;

architecture Behavioral of two_way_switch is
begin
OP <= A1 xor A2;    -- 2 input XOR gate
end Behavioral;